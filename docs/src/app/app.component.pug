  u-top-app-bar
    u-icon-button(
      type="button",
      slot="leading-icon",
      (click)="navigation.toggleDrawer = !navigation.toggleDrawer")
      span.material-symbols-outlined menu
    span Material

    input.color-picker(
      type="color",
      slot="trailing-icon",
      [ngModel]="themeColor",
      (ngModelChange)="$themeColorChange.next($event)")
    .position-relative(slot="trailing-icon")
      u-icon-button#theme-button
        span.material-symbols-outlined palette
      u-menu(
        toggle-selector="#theme-button"
        anchor-corner="end-end")
        u-menu-item((click)="setThemeMode(ThemeMode.Auto)")
          span.material-symbols-outlined(slot="icon") brightness_4
          span System
        u-menu-item((click)="setThemeMode(ThemeMode.Light)")
          span.material-symbols-outlined(slot="icon") light_mode
          span Light Mode
        u-menu-item((click)="setThemeMode(ThemeMode.Dark)")
